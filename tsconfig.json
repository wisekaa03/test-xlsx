{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "moduleResolution": "node",
    "noLib": false,
    "declaration": false,
    "sourceMap": true,
    "skipLibCheck": true,
    "strict": true,
    "removeComments": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist",
    "baseUrl": "./"
  },
  "include": [
    "*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}